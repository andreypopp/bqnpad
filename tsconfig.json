{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "target": "es2021",
    "jsx": "react",
    "noEmit": true,
    "paths": {
      "@bqnpad/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx"],
  "exclude": ["bqn.grammar.js"]
}
