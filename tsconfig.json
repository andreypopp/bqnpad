{
  "compilerOptions": {
    "target": "es2021",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "node_modules/.cache/tsbuild",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "composite": true,
    "incremental": true,
    "paths": {
      "@bqnpad/*": ["./*"]
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/*.d.ts", "**/*.tsx"],
  "exclude": []
}
